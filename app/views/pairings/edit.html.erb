<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Pairing</h1>
    <%= form_for(@pairing) do |f| %>
      <% if @pairing.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@pairing.errors.count, "error") %> prohibited this book from being saved:</h3>
          <ul>
            <% @pairing.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field row">
        <label for="pairing_title">Title</label>
        <%= f.text_field :title, class:"col-xs-12 pairing_title", id:"pairing_title" %>
      </div>
      <div class="field row">
        <label for="pairing_caption">Caption</label>
        <%= f.text_area :body, class:"col-xs-12 pairing_caption", id:"pairing_caption" %>
      </div>
      <div class="actions row">
        <%= f.submit "Update Pairing", class:"btn btn-primary col-xs-12" %>
      </div>
    <% end %>
    <%= link_to "Show", pairing_path(@pairing) %>
    |
    <a class="back" href="/pairings">Back</a>
  </div>
  <div class="col-md-3"></div>
</div>