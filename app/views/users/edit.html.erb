<div class="row">
  <div class="col-md-6 col-md-offset-3 pairing_form">
    <div class="section-title-wrapper style-1 v1">
      <h2>Edit User</h2>
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <label for="user_name">Name</label>
          <%= f.text_field :name, class:"name", id:"user_name" %>
        </div>
        <div class="field">
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class:"user_image", id:"user_profile_image" %>
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder:"プロフィール画像" %> 
        </div>
        <div class="actions">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>