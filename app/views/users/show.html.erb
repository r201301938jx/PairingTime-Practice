<div class="row">
  <div class="col-xs-2">
    <h3>User Info</h3>
    <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 90, 90, format:'jpg', class:"attachment user profile_image fallback", fallback: "no_image.jpg", size:'90x90' %>
    <% end %>
    <table class="table userinfo">
      <tbody>
        <tr></tr>
        <tr>
          <th>Username</th>
        </tr>
        </tr>
          <th><%= @user.name %></th>
        </tr>
      </tbody>
    </table>
    <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-primary" %></p>
    <% end %>
  </div>
  <div class="col-xs-10">
    <h2>User Pairing Lists</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Caption</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @user.pairings.each do |pairing| %>
           <tr>
            <td>
              <%= link_to pairing_path(pairing) do %>
                <%= attachment_image_tag pairing, :image, :fill, 150, 150, format:'jpg', class:"attachment user profile_image" %>
              <% end %>
              <br>
              <%= pluralize(pairing.post_comments.count, "comment") %>
              <br>
              <%= pluralize(pairing.favorites.count, "like") %>
            </td>
            <td>
              <%= link_to pairing_path(pairing) do %>
                <%= pairing.title %>
              <% end %>
            </td>
            <td><%= pairing.caption %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>